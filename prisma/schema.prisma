generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  wordLists    WordList[]
  sessions     PracticeSession[]
}

model WordList {
  id          String   @id @default(uuid())
  title       String
  description String?
  tags        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  words       Word[]
  questions   Question[]
  sessions    PracticeSession[]
}

model Word {
  id           String   @id @default(uuid())
  word         String
  meaning      String?
  partOfSpeech String?
  example      String?
  difficulty   Int?     @default(1)
  createdAt    DateTime @default(now())
  
  wordListId   String
  wordList     WordList @relation(fields: [wordListId], references: [id], onDelete: Cascade)
}

model Question {
  id              String   @id @default(uuid())
  type            String
  prompt          String
  optionsJson     String
  correctAnswer   String
  explanation     String?
  createdByGemini Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  wordListId      String
  wordList        WordList @relation(fields: [wordListId], references: [id], onDelete: Cascade)
  
  answers         Answer[]
}

model PracticeSession {
  id           String   @id @default(uuid())
  startedAt    DateTime @default(now())
  endedAt      DateTime?
  correctCount Int      @default(0)
  totalCount   Int      @default(0)
  
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  
  wordListId   String
  wordList     WordList @relation(fields: [wordListId], references: [id])
  
  answers      Answer[]
}

model Answer {
  id          String   @id @default(uuid())
  userAnswer  String
  isCorrect   Boolean
  timeSpent   Int?
  createdAt   DateTime @default(now())
  
  sessionId   String
  session     PracticeSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  questionId  String
  question    Question @relation(fields: [questionId], references: [id])
}